<div class="container">

    <form action="/login" method="POST" class="centered-form">
        <div class="profile-picture">
            <img src="/images/loginLogo.png" />
            <!-- Empty circular image box -->
        </div>
        <div class="form-group">
            <input class="form-control" type="text" placeholder="Username" id="username" name="username" required />
            <input class="form-control" type="password" placeholder="Password" name="password" required />
            {{#if err}}
            <div class="alert alert-primary text-center" role="alert">
                {{err}}
            </div>
            {{else}}
            {{/if}}
            <br><button type="submit" class="btn btn-block btn-secondary">Login</button>
            <br>
            <br>
            
        </div>
    </form>
</div>

{{> css/login}}