<main class="main-content mt-0 ps">
    <section>
        <div class="page-header min-vh-75">
            <div class="container">
                <div class="row">
                    <div class="col-xl-4 col-lg-5 col-md-6 d-flex flex-column mx-auto">
                        <div class="card card-plain mt-8">
                            <div class="card-header pb-0 text-left bg-transparent">
                                {{!-- messages above --}}
                                <h3 class="font-weight-bolder text-dark text-gradient">Timesheets, am I right?</h3>
                                <p class="mb-0">Sign in</p>
                            </div>
                            <div class="card-body">
                                {{!-- form starts --}}
                                <form role="form" method="POST" action="/login">
                                    <label>Username</label>
                                    <div class="mb-3">
                                        <input type="username" name="username" class="form-control" placeholder="username"
                                            aria-label="Email">
                                    </div>
                                    <label>Password</label>
                                    <div class="mb-3">
                                        <input type="password" name="password" class="form-control" placeholder="Password">
                                    </div>
                                    <div class="text-center">
                                        <button type="submit" class="btn bg-gradient-dark w-100 mt-4 mb-0">Sign
                                            in</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>


                    {{!-- logo here --}}
                    {{!-- logo here --}}
                    <div class="col-md-6">
                        <div class="oblique position-absolute top-0 h-100 d-md-block d-none me-n8">
                            <div class="oblique-image bg-cover position-absolute fixed-top ms-auto h-100 z-index-0 ms-n6"
                                style="background-image:url('/images/loginLogo.png')"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>



